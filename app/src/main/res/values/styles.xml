<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="bottomSheetDialogTheme">@style/YTheme.BottomSheetStyle</item>
        <item name="android:textViewStyle">@style/RubikRegular</item>
        <item name="actionBarStyle">@style/AppBarOverlay</item>
    </style>

    <style name="AppBarOverlay" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="elevation">0dp</item>
    </style>

    <!-- Base application theme. -->
    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="bottomSheetDialogTheme">@style/YTheme.BottomSheetStyle</item>
        <item name="android:textViewStyle">@style/RubikRegular</item>
    </style>

    <style name="YTheme.BottomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/YTheme.ModalStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="YTheme.ModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_hideable">true</item>
        <item name="behavior_skipCollapsed">true</item>
    </style>

    <style name="AccentRoundButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/round_button</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">42dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">36dp</item>
    </style>

    <style name="TextColorButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/text_button_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EditTextRubik16">
        <item name="android:textSize">16sp</item>
        <item name="android:maxLength">1000</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingTop">@dimen/padding_8dp</item>
        <item name="android:paddingBottom">@dimen/padding_8dp</item>
    </style>

    <!--TEXT-->
    <style name="RubikRegular">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="RubikBold">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
    </style>

</resources>
